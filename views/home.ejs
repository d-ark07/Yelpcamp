    <title>Yelpcamp | Home</title>

    <link rel="icon" href="/img/favicon.png" type="image/gif" sizes="16x16">
    
    <!-- Bootstarp css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
